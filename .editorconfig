# top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = tab                # Use tabs for indentation
indent_size = 4                   # Tab width set to 4 spaces
end_of_line = lf                  # Use Unix-style line endings (LF)
charset = utf-8                   # Encoding set to UTF-8
trim_trailing_whitespace = true   # Remove whitespace at the end of a line
insert_final_newline = true       # Ensure file ends with a newline

# Markdown specific settings
[*.md]
trim_trailing_whitespace = false  # Keep trailing whitespace in Markdown for line breaks
indent_style = space              # Use spaces for indentation
indent_size = 2                   # Indentation width of 2 spaces

# YAML files (including .yaml and .yml extensions)
[*.{yaml,yml}]
indent_style = space              # Use spaces for indentation
indent_size = 2                   # Standard indentation width for YAML

# GitLab CI configuration file
[.gitlab-ci.yml]
indent_size = 2                   # Indentation width of 2 spaces, following common convention
